{
    "compilerOptions" : {
        "importHelpers"             : true,
        "experimentalDecorators"    : true,

        "noImplicitThis"            : true,
        "strictBindCallApply"       : true,
        "strictPropertyInitialization" : false,

        "target"                    : "ES2021",
        "sourceMap"                 : false,

        "lib"                       : [
            "esnext",
        ],

        "module"                    : "esnext",
        "moduleResolution"          : "node",
        "moduleDetection"           : "force",

        "allowSyntheticDefaultImports"    : true
    },

    "include" : [
        "src/**/*.ts",
    ],

    "exclude" : [
    ]
}
